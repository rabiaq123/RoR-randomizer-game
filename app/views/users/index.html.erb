<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%# display table of users if users exist %>
<div>
  <% if @users.length > 0 %>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Password</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  <% else %>
    <p>No users</p>
  <% end %>
</div>

